<import src="../../component/menu/menu.wxml" />
<view class="weui-panel weui-panel_access">
  <template is="menuPannel" data="{{ ...__menu__ }}"/>
  <view class='leifengwang'>
    <image class='leifengwang-logo' src="../../images/leifengwang/lph-headerlogo.png"></image>读懂智能&未来
  </view>
  <view wx:if="{{isLoading}}" class="weui-loadmore">
      <view class="weui-loading"></view>
      <view class="weui-loadmore__tips">正在加载</view>
  </view>
  <view wx:else>
    <view
      class="weui-panel__bd"
      wx:for="{{list}}"
      wx:for-index="id"
      wx:key="id"
      wx:for-item="item"
    >
        <view data-id="{{id}}" bindtap='bindViewTap' class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
            <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                <image class="weui-media-box__thumb" src="{{item.user.avatar_url}}" />
            </view>
            <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                <view class="weui-media-box__title">{{item.title}}</view>
                <view class="weui-media-box__desc">{{item.updated_at}}</view>
                <view class="weui-media-box__desc">{{item.user.login}}</view>
            </view>
        </view>
        <view
          wx:if="{{index === id}}"
          class="weui-box__desc"
        >
        </view>
    </view>
    <view class="weui-panel__ft">
        <view class="weui-cell weui-cell_access weui-cell_link">
            <view class="weui-cell__bd">查看更多</view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </view>
    </view>
  </view>
</view>