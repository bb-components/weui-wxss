.leifengwang {
  height: 40px;
  padding: 20rpx;
  color: #606060;
  line-height: 40px;
  border: 1px solid #E6E6E6;
  background: #fff;
}

.leifengwang-logo {
  display: inline-block;
  float: left;
  margin-right: 20rpx;
  width: 80px;
  height: 36px;
}

.picture {
  width: 100%;
  min-height: 100vh;
  background: #eaebec;
}

.weui-panel__bd {
  /* 750 - 60 = 690 / 2 345 */
