}

.clear {
  clear: both;
}

.weui-media-box {
  background-color: #fff;
  border: 1px solid #e0e0e0;
  border-bottom-width: 2px;
  font-size: 12px;
  word-break: break-all;
}

.weui-media-box .picture-img {
  width: 100%;
  height: 300rpx;
}